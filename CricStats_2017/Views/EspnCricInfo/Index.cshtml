@model IEnumerable<CricStats.Models.Cricketer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm())
    {
        <p>
            Name: @Html.TextBox("SearchName")
            Grade:@Html.DropDownList("CricketerGrade", "All")
            <input type="submit" value="Search" />
        </p>
    }
</p>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestAvg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ODIAvg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.T20Avg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestAvg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ODIAvg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.T20Avg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
        }

</table>
